# ===== Base Image =====
FROM python:3.11-slim

# ===== Sistema y dependencias =====
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    git \
    curl \
    build-essential \
 && apt-get clean && rm -rf /var/lib/apt/lists/*

# ===== Entorno y seguridad =====
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_ROOT_USER_ACTION=ignore \
    PORT=10000

WORKDIR /app

# ===== Instalaci贸n de dependencias =====
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt \
 && pip install --no-cache-dir yt-dlp mutagen

# ===== Copia del c贸digo =====
COPY . .

# ===== yt-dlp: actualizaci贸n ligera (importante en Render) =====
RUN yt-dlp -U || true

# ===== Exposici贸n de puerto =====
EXPOSE 10000

# ===== Comando de arranque =====
CMD ["sh", "-lc", "exec gunicorn -k uvicorn.workers.UvicornWorker app:app --bind 0.0.0.0:$PORT --workers 1 --threads 8"]
